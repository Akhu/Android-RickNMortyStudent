<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".CharacterDetailActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/characterImageDetail"
            android:adjustViewBounds="true"
            android:contentDescription="@string/character_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/characterNameDetail"
            android:text="@string/title_placeholder"
            android:layout_alignBottom="@+id/characterImageDetail"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
            android:padding="16dp"
            style="@style/CharacterDetailTitle"
            />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/characterInformationsDetail"
        android:layout_below="@+id/characterImageDetail"
        android:textColor="?android:textColorSecondary"
        android:text="@string/character_placeholder"
        android:padding="16dp"
        style="@style/CharacterDetailText"
        />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subTitleDetail"
        android:layout_below="@+id/characterInformationsDetail"
        android:text="@string/lorem_character_detail"
        android:padding="16dp"
        style="@style/CharacterDetailText"
        />
    </RelativeLayout>
</ScrollView>